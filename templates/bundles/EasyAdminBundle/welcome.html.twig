{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %} {{ "dashboard.welcome"|trans }} {% endblock %}

{% block page_content %}
    <div class="container">
        <div class="row">
            <div class="col-6 alert-info">

                <span class="display-3">{{(CountAllUser['value'])  }}</span>  utilisateurs
            </div>
            <div class="col-6 alert-success">
                <span class="display-3">{{(CountAllCustomer['value'])  }}</span> Clients
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <p class="h3">liste des produits</p>
                <ul class="list-group">
                    {% for product in Product %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ product.name }}
                        <span class="badge badge-primary badge-pill">
                            <img class="img-thumbnail" src="{{ vich_uploader_asset(product,'imageFile') }}" style="">
                              </span>
                    </li>
         {% endfor %}
                </ul>

            </div>

        </div>
    </div>



{% endblock %}
